{
  "languages": {
    "Python": {
      "language_servers": ["ruff", "pyright", "!pyflakes"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lint": { "extend-ignore": ["F722"] }
        }
      }
    }
  }
}
